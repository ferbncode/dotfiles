call plug#end()
set number
filetype plugin indent on
set tabstop=4
set softtabstop=0
set expandtab
set shiftwidth=4
set smarttab
set autoindent
colorscheme dracula
let mapleader=","
nnoremap <c-p> :FZF<CR>
nnoremap tn :tabnew
nnoremap tt :tabnew<CR>:FZF<CR>
nnoremap tk :tabnext<CR>
nnoremap tj :tabprevious<CR>
nnoremap nh :nohlsearch<CR>
nnoremap xw :%s/\s\+$//e<CR>
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>


fun! TrimWhitespace()
    let l:save = winsaveview()
    %s/\s\+$//e
    call winrestview(l:save)
endfun

autocmd BufWritePre * :call TrimWhitespace()



set mouse=
" enable deoplete
let g:deoplete#enable_at_startup = 1

